@page "/reservation/modifier/{Id:int}"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using SallseSense.Services
@using SallseSense.Models
@inject ModifierReservationService ModifierReservationService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (reservation != null)
            {
                <!-- En-tête -->
                <div class="mb-4">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/dashboard">Accueil</a></li>
                            <li class="breadcrumb-item"><a href="/mes-reservations">Mes réservations</a></li>
                            <li class="breadcrumb-item active">Modifier une réservation</li>
                        </ol>
                    </nav>
                    <h2>Modifier une réservation</h2>
                    <p class="text-muted">Modifiez les détails de votre réservation</p>
                </div>

                <div class="card">
                    <div class="card-body">
                        <EditForm Model="@reservation" OnValidSubmit="@HandleSubmit">
                            <DataAnnotationsValidator />

                            <!-- Informations de la salle (non modifiable) -->
                            <div class="mb-4">
                                <h5 class="mb-3">Toutes les réservations</h5>
                                <div class="alert alert-secondary">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>Salle:</strong> @salleInfo?.Numero
                                        </div>
                                        <div class="col-md-6">
                                            <strong>Capacité:</strong> @salleInfo?.CapaciteMaximale personnes
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Détails de la réservation -->
                            <div class="mb-4">
                                <h5 class="mb-3">Détails de la réservation</h5>

                                <div class="row mb-3">
                                    <div class="col-md-12">
                                        <label class="form-label">Réservation actuelle</label>
                                        <div class="input-group">
                                            <select class="form-select" value="@reservationSelectionneeId" @onchange="OnReservationChanged">
                                                @foreach (var res in toutesReservations)
                                                {
                                                    <option value="@res.IdReservationPk">
                                                        @res.HeureDebut.ToString("dd/MM/yyyy HH:mm") - @res.HeureFin.ToString("HH:mm") (@res.NombrePersonne personnes)
                                                    </option>
                                                }
                                            </select>
                                            <button type="button" class="btn btn-outline-secondary" @onclick="ChargerReservationsAsync">
                                                <span class="oi oi-reload"></span>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="date" class="form-label">Date *</label>
                                        <input type="date" id="date" class="form-control" value="@dateReservation?.ToString("yyyy-MM-dd")" @onchange="OnDateChanged" />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="nombrePersonnes" class="form-label">Nombre de personnes *</label>
                                        <input type="number" id="nombrePersonnes" class="form-control" value="@reservation.NombrePersonne" @onchange="OnNombrePersonnesChanged" min="1" />
                                        <ValidationMessage For="@(() => reservation.NombrePersonne)" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="heureDebut" class="form-label">Heure début *</label>
                                        <input type="time" id="heureDebut" class="form-control" value="@heureDebut?.ToString("HH:mm")" @onchange="OnHeureDebutChanged" />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="heureFin" class="form-label">Heure fin *</label>
                                        <input type="time" id="heureFin" class="form-control" value="@heureFin?.ToString("HH:mm")" @onchange="OnHeureFinChanged" />
                                    </div>
                                </div>
                            </div>

                            <!-- Messages d'avertissement -->
                            @if (depassementCapacite)
                            {
                                <div class="alert alert-warning">
                                    <strong>Attention!</strong> Le nombre de personnes (@reservation.NombrePersonne) dépasse la capacité maximale de la salle (@salleInfo?.CapaciteMaximale).
                                </div>
                            }

                            @if (salleNonDisponible)
                            {
                                <div class="alert alert-danger">
                                    <strong>Salle non disponible!</strong> Cette salle est déjà réservée pour cette période.
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">
                                    @errorMessage
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(successMessage))
                            {
                                <div class="alert alert-success">
                                    @successMessage
                                </div>
                            }

                            <!-- Comparaison avant/après -->
                            @if (reservationOriginale != null)
                            {
                                <div class="card bg-light mb-4">
                                    <div class="card-body">
                                        <h6 class="card-title">Modifications</h6>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h6 class="text-muted">Avant</h6>
                                                <ul class="list-unstyled small">
                                                    <li><strong>Date:</strong> @reservationOriginale.HeureDebut.ToString("dd/MM/yyyy")</li>
                                                    <li><strong>Horaire:</strong> @reservationOriginale.HeureDebut.ToString("HH:mm") - @reservationOriginale.HeureFin.ToString("HH:mm")</li>
                                                    <li><strong>Personnes:</strong> @reservationOriginale.NombrePersonne</li>
                                                </ul>
                                            </div>
                                            <div class="col-md-6">
                                                <h6 class="text-primary">Après</h6>
                                                <ul class="list-unstyled small">
                                                    <li><strong>Date:</strong> @dateReservation?.ToString("dd/MM/yyyy")</li>
                                                    <li><strong>Horaire:</strong> @heureDebut - @heureFin</li>
                                                    <li><strong>Personnes:</strong> @reservation.NombrePersonne</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Boutons d'action -->
                            <div class="d-flex justify-content-between">
                                <div>
                                    <a href="/dashboard" class="btn btn-outline-secondary me-2">
                                        <span class="oi oi-arrow-left"></span> Annuler
                                    </a>
                                    <button type="button" class="btn btn-outline-danger" @onclick="ConfirmerAnnulation">
                                        <span class="oi oi-trash"></span> Annuler la réservation
                                    </button>
                                </div>
                                <button type="submit" class="btn btn-primary" disabled="@(!PeutModifier())">
                                    <span class="oi oi-check"></span> Enregistrer les modifications
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>

                <!-- Autres réservations de la salle -->
                @if (autresReservations.Any())
                {
                    <div class="card mt-4">
                        <div class="card-header">
                            <h6 class="mb-0">Autres réservations pour cette salle</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Heure début</th>
                                            <th>Heure fin</th>
                                            <th>Personnes</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var res in autresReservations)
                                        {
                                            <tr>
                                                <td>@res.HeureDebut.ToString("dd/MM/yyyy")</td>
                                                <td>@res.HeureDebut.ToString("HH:mm")</td>
                                                <td>@res.HeureFin.ToString("HH:mm")</td>
                                                <td>@res.NombrePersonne</td>
                                                <td>
                                                    <span class="badge @(res.HeureDebut > DateTime.Now ? "bg-success" : "bg-secondary")">
                                                        @(res.HeureDebut > DateTime.Now ? "À venir" : "Passée")
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    <h4>Réservation introuvable</h4>
                    <p>La réservation demandée n'existe pas ou a été supprimée.</p>
                    <a href="/dashboard" class="btn btn-primary">Retour au dashboard</a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal de confirmation d'annulation -->
@if (afficherModalAnnulation)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmer l'annulation</h5>
                    <button type="button" class="btn-close" @onclick="() => afficherModalAnnulation = false"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir annuler cette réservation ?</p>
                    <p class="text-muted">
                        <strong>Salle:</strong> @salleInfo?.Numero<br />
                        <strong>Date:</strong> @reservation?.HeureDebut.ToString("dd/MM/yyyy")<br />
                        <strong>Horaire:</strong> @reservation?.HeureDebut.ToString("HH:mm") - @reservation?.HeureFin.ToString("HH:mm")
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => afficherModalAnnulation = false">Non, garder</button>
                    <button type="button" class="btn btn-danger" @onclick="AnnulerReservation">Oui, annuler</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private int currentUserId;
    private bool isAdmin = false;
    private Reservation? reservation;
    private Reservation? reservationOriginale;
    private ModifierReservationService.SalleInfoViewModel? salleInfo;
    private List<ModifierReservationService.ReservationSimpleViewModel> toutesReservations = new();
    private List<ModifierReservationService.ReservationSimpleViewModel> autresReservations = new();

    private int reservationSelectionneeId;
    private DateTime? dateReservation;
    private TimeOnly? heureDebut;
    private TimeOnly? heureFin;

    private bool depassementCapacite = false;
    private bool salleNonDisponible = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool afficherModalAnnulation = false;

    protected override async Task OnInitializedAsync()
    {
        // Récupérer l'utilisateur connecté
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var userIdClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
            if (userIdClaim != null && int.TryParse(userIdClaim.Value, out int userId))
            {
                currentUserId = userId;
                isAdmin = await ModifierReservationService.IsAdminAsync(userId);
            }
        }

        await ChargerReservationsAsync();
    }

    private async Task ChargerReservationsAsync()
    {
        var viewModel = await ModifierReservationService.GetReservationDataAsync(Id, currentUserId, isAdmin);

        if (viewModel != null)
        {
            reservation = viewModel.Reservation;
            reservationOriginale = new Reservation
            {
                IdReservationPk = reservation.IdReservationPk,
                HeureDebut = reservation.HeureDebut,
                HeureFin = reservation.HeureFin,
                NombrePersonne = reservation.NombrePersonne,
                NoSalle = reservation.NoSalle,
                NoPersonne = reservation.NoPersonne
            };

            salleInfo = viewModel.SalleInfo;
            toutesReservations = viewModel.ToutesReservations;
            autresReservations = viewModel.AutresReservations;

            reservationSelectionneeId = reservation.IdReservationPk;
            dateReservation = reservation.HeureDebut.Date;
            heureDebut = TimeOnly.FromDateTime(reservation.HeureDebut);
            heureFin = TimeOnly.FromDateTime(reservation.HeureFin);

            VerifierCapacite();
        }
    }

    private async Task OnReservationChanged(ChangeEventArgs e)
    {
        if (e.Value != null && int.TryParse(e.Value.ToString(), out int newId))
        {
            reservationSelectionneeId = newId;
            Id = newId;
            await ChargerReservationsAsync();
        }
    }

    private void OnDateChanged(ChangeEventArgs e)
    {
        if (e.Value != null && DateTime.TryParse(e.Value.ToString(), out DateTime newDate))
        {
            dateReservation = newDate;
            VerifierCapacite();
        }
    }

    private void OnNombrePersonnesChanged(ChangeEventArgs e)
    {
        if (e.Value != null && int.TryParse(e.Value.ToString(), out int newNombre))
        {
            if (reservation != null)
            {
                reservation.NombrePersonne = newNombre;
                VerifierCapacite();
            }
        }
    }

    private void OnHeureDebutChanged(ChangeEventArgs e)
    {
        if (e.Value != null && TimeOnly.TryParse(e.Value.ToString(), out TimeOnly newHeure))
        {
            heureDebut = newHeure;
        }
    }

    private void OnHeureFinChanged(ChangeEventArgs e)
    {
        if (e.Value != null && TimeOnly.TryParse(e.Value.ToString(), out TimeOnly newHeure))
        {
            heureFin = newHeure;
        }
    }

    private void VerifierCapacite()
    {
        if (reservation != null && salleInfo != null && reservation.NombrePersonne > 0)
        {
            depassementCapacite = reservation.NombrePersonne > salleInfo.CapaciteMaximale;
        }
    }

    private bool PeutModifier()
    {
        return reservation != null &&
               dateReservation.HasValue &&
               heureDebut.HasValue &&
               heureFin.HasValue &&
               reservation.NombrePersonne > 0 &&
               !salleNonDisponible;
    }

    private async Task HandleSubmit()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;

        if (reservation == null || !dateReservation.HasValue || !heureDebut.HasValue || !heureFin.HasValue)
        {
            errorMessage = "Données de réservation invalides.";
            return;
        }

        var nouvelleHeureDebut = dateReservation.Value.Add(heureDebut.Value.ToTimeSpan());
        var nouvelleHeureFin = dateReservation.Value.Add(heureFin.Value.ToTimeSpan());

        var result = await ModifierReservationService.ModifierReservationAsync(
            reservation.IdReservationPk,
            currentUserId,
            nouvelleHeureDebut,
            nouvelleHeureFin,
            reservation.NombrePersonne,
            isAdmin
        );

        if (result.Success)
        {
            successMessage = result.Message + " Redirection...";
            await Task.Delay(2000);
            NavigationManager.NavigateTo("/dashboard");
        }
        else
        {
            errorMessage = result.Message;
        }
    }

    private void ConfirmerAnnulation()
    {
        afficherModalAnnulation = true;
    }

    private async Task AnnulerReservation()
    {
        afficherModalAnnulation = false;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        if (reservation == null)
        {
            errorMessage = "Réservation invalide.";
            return;
        }

        var result = await ModifierReservationService.AnnulerReservationAsync(
            reservation.IdReservationPk,
            currentUserId,
            isAdmin
        );

        if (result.Success)
        {
            successMessage = result.Message + " Redirection...";
            await Task.Delay(2000);
            NavigationManager.NavigateTo("/dashboard");
        }
        else
        {
            errorMessage = result.Message;
        }
    }
}
