@page "/reservation/creer"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using SallseSense.Services
@using SallseSense.Models
@inject ReservationFormService ReservationFormService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- En-tête -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/dashboard">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="/salles">Salles</a></li>
                        <li class="breadcrumb-item active">Créer une réservation</li>
                    </ol>
                </nav>
                <h2>Créer une réservation</h2>
                <p class="text-muted">Réservez une salle pour votre événement</p>
            </div>

            <div class="card">
                <div class="card-body">
                    <EditForm Model="@reservation" OnValidSubmit="@HandleSubmit">
                        <DataAnnotationsValidator />

                        <!-- Sélection de la salle -->
                        <div class="mb-4">
                            <h5 class="mb-3 font-semibold">Salle</h5>
                            <div class="mb-3 form-group-required">
                                <label for="salle" class="form-label">Sélectionner une salle</label>
                                <select id="salle" class="form-select" required @onchange="@(async (e) => { reservation.NoSalle = int.Parse(e.Value!.ToString()!); await OnSalleChangedAsync(); })">
                                    <option value="0">-- Choisir une salle --</option>
                                    @foreach (var salle in sallesDisponibles)
                                    {
                                        <option value="@salle.IdSallePk" selected="@(reservation.NoSalle == salle.IdSallePk)">
                                            Salle @salle.Numero - Capacité: @salle.CapaciteMaximale personnes
                                        </option>
                                    }
                                </select>
                                <ValidationMessage For="@(() => reservation.NoSalle)" />
                            </div>

                            @if (salleSelectionnee != null)
                            {
                                <div class="alert alert-info">
                                    <strong>Salle @salleSelectionnee.Numero</strong><br />
                                    Capacité maximale: @salleSelectionnee.CapaciteMaximale personnes
                                </div>
                            }
                        </div>

                        <!-- Détails de la réservation -->
                        <div class="mb-4">
                            <h5 class="mb-3 font-semibold">Détails de la réservation</h5>

                            <div class="row mb-3">
                                <div class="col-md-6 form-group-required">
                                    <label for="date" class="form-label">Date</label>
                                    <input type="date" id="date" class="form-control @GetDateValidationClass()" @bind="dateReservation" required />
                                </div>
                                <div class="col-md-6 form-group-required">
                                    <label for="nombrePersonnes" class="form-label">Nombre de personnes</label>
                                    <input type="number" id="nombrePersonnes" class="form-control @GetNombrePersonnesValidationClass()" @bind="reservation.NombrePersonne" @bind:event="onchange" min="1" required />
                                    <ValidationMessage For="@(() => reservation.NombrePersonne)" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6 form-group-required">
                                    <label for="heureDebut" class="form-label">Heure début</label>
                                    <input type="time" id="heureDebut" class="form-control @GetHeureDebutValidationClass()" @bind="heureDebut" required />
                                </div>
                                <div class="col-md-6 form-group-required">
                                    <label for="heureFin" class="form-label">Heure fin</label>
                                    <input type="time" id="heureFin" class="form-control @GetHeureFinValidationClass()" @bind="heureFin" required />
                                </div>
                            </div>
                        </div>

                        <!-- Messages d'avertissement -->
                        @if (depassementCapacite)
                        {
                            <div class="alert alert-warning">
                                <strong>Attention!</strong> Le nombre de personnes (@reservation.NombrePersonne) dépasse la capacité maximale de la salle (@salleSelectionnee?.CapaciteMaximale).
                            </div>
                        }

                        @if (salleNonDisponible)
                        {
                            <div class="alert alert-danger">
                                <strong>Salle non disponible!</strong> Cette salle est déjà réservée pour cette période.
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">
                                @errorMessage
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success">
                                @successMessage
                            </div>
                        }

                        <!-- Récapitulatif -->
                        @if (reservation.NoSalle > 0 && dateReservation.HasValue && heureDebut.HasValue && heureFin.HasValue)
                        {
                            <div class="card bg-light mb-4">
                                <div class="card-body">
                                    <h6 class="card-title">Récapitulatif</h6>
                                    <ul class="list-unstyled mb-0">
                                        <li><strong>Salle:</strong> @salleSelectionnee?.Numero</li>
                                        <li><strong>Date:</strong> @dateReservation.Value.ToString("dddd dd MMMM yyyy")</li>
                                        <li><strong>Horaire:</strong> @heureDebut.Value.ToString("HH:mm") - @heureFin.Value.ToString("HH:mm")</li>
                                        <li><strong>Nombre de personnes:</strong> @reservation.NombrePersonne</li>
                                    </ul>
                                </div>
                            </div>
                        }

                        <!-- Boutons d'action -->
                        <div class="d-flex justify-content-between">
                            <a href="/salles" class="btn btn-outline-secondary">
                                <span class="oi oi-arrow-left"></span> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary" disabled="@(!PeutReserver())">
                                <span class="oi oi-check"></span> Réserver
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>

            <!-- Réservations existantes pour la salle sélectionnée -->
            @if (salleSelectionnee != null && reservationsExistantes.Any())
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h6 class="mb-0">Réservations existantes pour Salle @salleSelectionnee.Numero</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Heure début</th>
                                        <th>Heure fin</th>
                                        <th>Personnes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var res in reservationsExistantes)
                                    {
                                        <tr>
                                            <td>@res.HeureDebut.ToString("dd/MM/yyyy")</td>
                                            <td>@res.HeureDebut.ToString("HH:mm")</td>
                                            <td>@res.HeureFin.ToString("HH:mm")</td>
                                            <td>@res.NombrePersonne</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = "salleId")]
    public int? SalleIdPreselectionne { get; set; }

    private Reservation reservation = new Reservation { NombrePersonne = 1 };
    private DateTime? dateReservation = DateTime.Today;
    private TimeOnly? heureDebut = new TimeOnly(9, 0);
    private TimeOnly? heureFin = new TimeOnly(10, 0);

    private int currentUserId;
    private List<ReservationFormService.SalleViewModel> sallesDisponibles = new();
    private ReservationFormService.SalleViewModel? salleSelectionnee;
    private List<Reservation> reservationsExistantes = new();

    private bool depassementCapacite = false;
    private bool salleNonDisponible = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        // Récupérer l'utilisateur connecté
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var userIdClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
            if (userIdClaim != null && int.TryParse(userIdClaim.Value, out int userId))
            {
                currentUserId = userId;
            }
        }

        // Charger les salles disponibles pour aujourd'hui
        await LoadSallesDisponiblesAsync();

        if (SalleIdPreselectionne.HasValue)
        {
            reservation.NoSalle = SalleIdPreselectionne.Value;
            await OnSalleChangedAsync();
        }
    }

    private async Task LoadSallesDisponiblesAsync()
    {
        if (!dateReservation.HasValue || !heureDebut.HasValue || !heureFin.HasValue)
        {
            dateReservation = DateTime.Today;
            heureDebut = new TimeOnly(9, 0);
            heureFin = new TimeOnly(10, 0);
        }

        var debut = dateReservation.Value.Add(heureDebut.Value.ToTimeSpan());
        var fin = dateReservation.Value.Add(heureFin.Value.ToTimeSpan());

        // Utiliser le service pour charger les salles disponibles
        sallesDisponibles = await ReservationFormService.GetSallesDisponiblesAsync(debut, fin);
    }

    private async Task OnSalleChangedAsync()
    {
        salleSelectionnee = sallesDisponibles.FirstOrDefault(s => s.IdSallePk == reservation.NoSalle);
        VerifierCapacite();
        await ChargerReservationsExistantesAsync();
    }

    private void VerifierCapacite()
    {
        if (salleSelectionnee != null && reservation.NombrePersonne > 0)
        {
            depassementCapacite = reservation.NombrePersonne > salleSelectionnee.CapaciteMaximale;
        }
    }

    private async Task ChargerReservationsExistantesAsync()
    {
        if (reservation.NoSalle > 0 && dateReservation.HasValue)
        {
            var dateDebut = dateReservation.Value.Date;
            var dateFin = dateReservation.Value.Date.AddDays(1);

            reservationsExistantes = await ReservationFormService.GetReservationsBySalleAsync(
                reservation.NoSalle,
                dateDebut,
                dateFin);
        }
    }

    private bool PeutReserver()
    {
        return reservation.NoSalle > 0 &&
               dateReservation.HasValue &&
               heureDebut.HasValue &&
               heureFin.HasValue &&
               reservation.NombrePersonne > 0 &&
               !salleNonDisponible;
    }

    private string GetDateValidationClass()
    {
        if (!dateReservation.HasValue) return "";
        return dateReservation.Value >= DateTime.Today ? "is-valid" : "is-invalid";
    }

    private string GetNombrePersonnesValidationClass()
    {
        if (reservation.NombrePersonne <= 0) return "";
        if (depassementCapacite) return "is-invalid";
        return "is-valid";
    }

    private string GetHeureDebutValidationClass()
    {
        if (!heureDebut.HasValue) return "";
        if (!heureFin.HasValue) return "is-valid";
        return heureDebut.Value < heureFin.Value ? "is-valid" : "is-invalid";
    }

    private string GetHeureFinValidationClass()
    {
        if (!heureFin.HasValue) return "";
        if (!heureDebut.HasValue) return "is-valid";
        return heureFin.Value > heureDebut.Value ? "is-valid" : "is-invalid";
    }

    private async Task HandleSubmit()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;

        // Validation de l'utilisateur
        if (currentUserId <= 0)
        {
            errorMessage = "Vous devez être connecté pour réserver.";
            return;
        }

        // Combiner date et heures
        if (dateReservation.HasValue && heureDebut.HasValue && heureFin.HasValue)
        {
            reservation.HeureDebut = dateReservation.Value.Add(heureDebut.Value.ToTimeSpan());
            reservation.HeureFin = dateReservation.Value.Add(heureFin.Value.ToTimeSpan());

            // Créer la réservation via le service
            var result = await ReservationFormService.CreerReservationAsync(
                currentUserId,
                reservation.NoSalle,
                reservation.HeureDebut,
                reservation.HeureFin,
                reservation.NombrePersonne
            );

            if (result.Success)
            {
                successMessage = result.Message + " Redirection...";
                await Task.Delay(2000);
                NavigationManager.NavigateTo("/dashboard");
            }
            else
            {
                errorMessage = result.Message;
            }
        }
    }
}
