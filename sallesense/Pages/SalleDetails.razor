@page "/salle/{Id:int}"
@using Microsoft.AspNetCore.Authorization
@using SallseSense.Services
@inject SalleDetailsService SalleDetailsService
@attribute [Authorize]

<div class="container-fluid mt-4">
    @if (viewModel?.Salle != null)
    {
        <!-- En-tête -->
        <div class="row mb-4">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/dashboard">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="/salles">Salles</a></li>
                        <li class="breadcrumb-item active">Salle @viewModel.Salle.Numero</li>
                    </ol>
                </nav>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2>Salle @viewModel.Salle.Numero</h2>
                        <p class="text-muted">Détails et informations de la salle</p>
                    </div>
                    <div>
                        <span class="badge @(viewModel.Salle.EstDisponible ? "bg-success" : "bg-danger") fs-5">
                            @(viewModel.Salle.EstDisponible ? "Disponible" : "Occupée")
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Informations principales -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Informations générales</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Numéro:</strong>
                                <p>@viewModel.Salle.Numero</p>
                            </div>
                            <div class="col-md-6">
                                <strong>Capacité maximale:</strong>
                                <p>@viewModel.Salle.CapaciteMaximale personnes</p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Bâtiment:</strong>
                                <p>@viewModel.Salle.Numero.Split('-')[0]</p>
                            </div>
                            <div class="col-md-6">
                                <strong>Étage:</strong>
                                <p>@viewModel.Salle.Numero</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Disponibilité et réservations -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Réservations du jour</h5>
                    </div>
                    <div class="card-body">
                        @if (viewModel.ReservationsDuJour.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Heure début</th>
                                            <th>Heure fin</th>
                                            <th>Personnes</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var reservation in viewModel.ReservationsDuJour)
                                        {
                                            <tr>
                                                <td>@reservation.HeureDebut.ToString("HH:mm")</td>
                                                <td>@reservation.HeureFin.ToString("HH:mm")</td>
                                                <td>@reservation.NombrePersonne</td>
                                                <td>
                                                    <span class="badge @(reservation.EstEnCours ? "bg-warning text-dark" : "bg-secondary")">
                                                        @(reservation.EstEnCours ? "En cours" : "Terminée")
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">Aucune réservation aujourd'hui</p>
                        }

                        <div class="d-grid gap-2 mt-3">
                            <a href="/reservation/creer?salleId=@Id" class="btn btn-primary">
                                <span class="oi oi-calendar"></span> Créer une réservation
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Historique des activités -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Résumé des activités récentes</h5>
                    </div>
                    <div class="card-body">
                        @if (viewModel.ActivitesRecentes.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var activite in viewModel.ActivitesRecentes)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@activite.Type</h6>
                                            <small>@activite.DateHeure.ToString("dd/MM HH:mm")</small>
                                        </div>
                                        <p class="mb-1">@activite.Description</p>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">Aucune activité récente</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Sidebar droite -->
            <div class="col-md-4">
                <!-- Photo archive -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Photo archive</h5>
                    </div>
                    <div class="card-body">
                        @if (viewModel.PhotosArchive.Any())
                        {
                            <div class="row g-2">
                                @foreach (var photo in viewModel.PhotosArchive.Take(6))
                                {
                                    <div class="col-6">
                                        <div class="card shadow-sm">
                                            <img src="/api/photo/@photo.IdDonnee"
                                                 class="card-img-top"
                                                 alt="Photo du @photo.DateHeure.ToString("dd/MM HH:mm")"
                                                 style="height: 120px; object-fit: cover;">
                                            <div class="card-body p-2 text-center">
                                                <p class="mb-0 small">@photo.DateHeure.ToString("dd-MM HH:mm")</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            @if (viewModel.PhotosArchive.Count > 6)
                            {
                                <a href="/photos" class="btn btn-sm btn-outline-secondary w-100 mt-2">
                                    Voir toutes (@viewModel.PhotosArchive.Count)
                                </a>
                            }
                        }
                        else
                        {
                            <p class="text-muted text-center">Aucune photo disponible</p>
                        }
                    </div>
                </div>

                <!-- Capteurs -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Capteurs actifs</h5>
                    </div>
                    <div class="card-body">
                        @if (viewModel.Capteurs.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var capteur in viewModel.Capteurs)
                                {
                                    <li class="list-group-item px-0">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>@capteur.Nom</strong>
                                                <br />
                                                <small class="text-muted">@capteur.Type</small>
                                            </div>
                                            <span class="badge @(capteur.EstActif ? "bg-success" : "bg-secondary")">
                                                @(capteur.EstActif ? "Actif" : "Inactif")
                                            </span>
                                        </div>
                                        @if (capteur.DerniereMesure.HasValue)
                                        {
                                            <div class="mt-2">
                                                <small>Dernière mesure: @capteur.DerniereMesure.Value.ToString("F2")</small>
                                            </div>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">Aucun capteur configuré</p>
                        }
                    </div>
                </div>

                <!-- Actions rapides -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Actions rapides</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/reservation/creer?salleId=@Id" class="btn btn-outline-primary">
                                <span class="oi oi-plus"></span> Nouvelle réservation
                            </a>
                            <button class="btn btn-outline-secondary">
                                <span class="oi oi-graph"></span> Voir statistiques
                            </button>
                            <button class="btn btn-outline-info">
                                <span class="oi oi-bell"></span> Configurer alertes
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <h4>Salle introuvable</h4>
            <p>La salle demandée n'existe pas ou a été supprimée.</p>
            <a href="/salles" class="btn btn-primary">Retour à la liste des salles</a>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private SalleDetailsService.SalleDetailsViewModel? viewModel;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        viewModel = await SalleDetailsService.GetSalleDetailsAsync(Id);
    }
}
