@page "/salle/{Id:int}"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using SallseSense.Services
@inject SalleDetailsService SalleDetailsService
@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]

<div class="container-fluid mt-4">
    @if (viewModel?.Salle != null)
    {
        <!-- En-tête -->
        <div class="row mb-4">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/dashboard">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="/salles">Salles</a></li>
                        <li class="breadcrumb-item active">Salle @viewModel.Salle.Numero</li>
                    </ol>
                </nav>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2>Salle @viewModel.Salle.Numero</h2>
                        <p class="text-muted">Détails et informations de la salle</p>
                    </div>
                    <div>
                        @if (viewModel.Salle.EstDisponible)
                        {
                            <span class="badge badge-status-available fs-5">
                                <span class="oi oi-check me-1"></span> Disponible
                            </span>
                        }
                        else
                        {
                            <span class="badge badge-status-occupied fs-5">
                                <span class="oi oi-ban me-1"></span> Occupée
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Informations principales -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Informations générales</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Numéro:</strong>
                                <p>@viewModel.Salle.Numero</p>
                            </div>
                            <div class="col-md-6">
                                <strong>Capacité maximale:</strong>
                                <p>@viewModel.Salle.CapaciteMaximale personnes</p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Bâtiment:</strong>
                                <p>@viewModel.Salle.Numero.Split('-')[0]</p>
                            </div>
                            <div class="col-md-6">
                                <strong>Étage:</strong>
                                <p>@viewModel.Salle.Numero</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Disponibilité et réservations -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Réservations à venir</h5>
                    </div>
                    <div class="card-body">
                        @if (viewModel.ReservationsDuJour.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-responsive-cards">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Heure début</th>
                                            <th>Heure fin</th>
                                            <th>Personnes</th>
                                            <th>Status</th>
                                            @if (isAdmin)
                                            {
                                                <th>Actions</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var reservation in viewModel.ReservationsDuJour)
                                        {
                                            <tr>
                                                <td data-label="Date">@reservation.HeureDebut.ToString("dd/MM/yyyy")</td>
                                                <td data-label="Début">@reservation.HeureDebut.ToString("HH:mm")</td>
                                                <td data-label="Fin">@reservation.HeureFin.ToString("HH:mm")</td>
                                                <td data-label="Personnes">@reservation.NombrePersonne</td>
                                                <td data-label="Status">
                                                    <span class="badge @(reservation.EstEnCours ? "bg-warning text-dark" : "bg-secondary")">
                                                        @(reservation.EstEnCours ? "En cours" : "À venir")
                                                    </span>
                                                </td>
                                                @if (isAdmin)
                                                {
                                                    <td data-label="Actions" class="actions-cell">
                                                        <a href="/reservation/modifier/@reservation.IdReservationPk" class="btn btn-sm btn-outline-primary">
                                                            <span class="oi oi-pencil" aria-hidden="true"></span> Modifier
                                                        </a>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <div class="empty-state-icon">
                                    <span class="oi oi-calendar"></span>
                                </div>
                                <div class="empty-state-title">Aucune réservation à venir</div>
                                <p class="empty-state-text">Cette salle est libre pour réservation.</p>
                            </div>
                        }

                        <div class="d-grid gap-2 mt-3">
                            <a href="/reservation/creer?salleId=@Id" class="btn btn-primary">
                                <span class="oi oi-calendar"></span> Créer une réservation
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Historique des activités -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Résumé des activités récentes</h5>
                    </div>
                    <div class="card-body">
                        @if (viewModel.ActivitesRecentes.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var activite in viewModel.ActivitesRecentes)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@activite.Type</h6>
                                            <small>@activite.DateHeure.ToString("dd/MM HH:mm")</small>
                                        </div>
                                        <p class="mb-1">@activite.Description</p>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">Aucune activité récente</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Sidebar droite -->
            <div class="col-md-4">
                <!-- Actions rapides (en premier pour plus de visibilité) -->
                <div class="quick-actions-card">
                    <div class="quick-actions-header">
                        <span class="oi oi-bolt"></span>
                        <h5>Actions rapides</h5>
                    </div>
                    <div class="quick-actions-body">
                        <a href="/reservation/creer?salleId=@Id" class="quick-action-btn primary">
                            <div class="quick-action-icon">
                                <span class="oi oi-plus"></span>
                            </div>
                            <div class="quick-action-content">
                                <span class="quick-action-title">Nouvelle réservation</span>
                                <span class="quick-action-desc">Réserver cette salle</span>
                            </div>
                        </a>
                        <a href="/salle/@Id/statistiques" class="quick-action-btn secondary">
                            <div class="quick-action-icon">
                                <span class="oi oi-graph"></span>
                            </div>
                            <div class="quick-action-content">
                                <span class="quick-action-title">Statistiques</span>
                                <span class="quick-action-desc">Voir les données</span>
                            </div>
                        </a>
                        <a href="/photos?salle=@Id" class="quick-action-btn info">
                            <div class="quick-action-icon">
                                <span class="oi oi-camera-slr"></span>
                            </div>
                            <div class="quick-action-content">
                                <span class="quick-action-title">Photos</span>
                                <span class="quick-action-desc">Voir les captures</span>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Photo archive -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Photo archive</h5>
                    </div>
                    <div class="card-body">
                        @if (viewModel.PhotosArchive.Any())
                        {
                            <div class="row g-3">
                                @foreach (var photo in viewModel.PhotosArchive.Take(6))
                                {
                                    <div class="col-6">
                                        <div class="card shadow-sm photo-card">
                                            <img src="/api/photo/@photo.IdDonnee"
                                                 class="card-img-top"
                                                 alt="Photo de la salle @viewModel.Salle.Numero capturée le @photo.DateHeure.ToString("dd MMMM yyyy à HH:mm")"
                                                 loading="lazy"
                                                 decoding="async"
                                                 style="height: 100px; object-fit: cover; border-radius: var(--radius) var(--radius) 0 0;">
                                            <div class="card-body p-2 text-center">
                                                <p class="mb-0 text-xs text-muted">@photo.DateHeure.ToString("dd/MM HH:mm")</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            @if (viewModel.PhotosArchive.Count > 6)
                            {
                                <a href="/photos" class="btn btn-sm btn-outline-primary w-100 mt-3">
                                    <span class="oi oi-image me-1"></span> Voir toutes (@viewModel.PhotosArchive.Count)
                                </a>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <span class="oi oi-camera-slr text-muted" style="font-size: 2rem;"></span>
                                <p class="text-muted mt-2 mb-0">Aucune photo disponible</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Capteurs -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Capteurs actifs</h5>
                    </div>
                    <div class="card-body p-0">
                        @if (viewModel.Capteurs.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var capteur in viewModel.Capteurs)
                                {
                                    <div class="list-group-item py-3">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-1">@capteur.Nom</h6>
                                                <small class="text-muted">@capteur.Type</small>
                                            </div>
                                            <span class="badge @(capteur.EstActif ? "badge-active" : "bg-secondary")">
                                                @(capteur.EstActif ? "Actif" : "Inactif")
                                            </span>
                                        </div>
                                        @if (capteur.DerniereMesure.HasValue)
                                        {
                                            <div class="mt-2 pt-2 border-top">
                                                <small class="text-muted">
                                                    <span class="oi oi-pulse me-1"></span>
                                                    Dernière mesure: <strong>@capteur.DerniereMesure.Value.ToString("F2")</strong>
                                                </small>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <span class="oi oi-dial text-muted" style="font-size: 2rem;"></span>
                                <p class="text-muted mt-2 mb-0">Aucun capteur configuré</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <h4>Salle introuvable</h4>
            <p>La salle demandée n'existe pas ou a été supprimée.</p>
            <a href="/salles" class="btn btn-primary">Retour à la liste des salles</a>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private SalleDetailsService.SalleDetailsViewModel? viewModel;
    private bool isAdmin = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserRole();
        await LoadDataAsync();
    }

    private async Task LoadUserRole()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var roleClaim = user.FindFirst(System.Security.Claims.ClaimTypes.Role);
            isAdmin = roleClaim?.Value == "Admin";
        }
    }

    private async Task LoadDataAsync()
    {
        viewModel = await SalleDetailsService.GetSalleDetailsAsync(Id);
    }
}
