@page "/dashboard"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using SallseSense.Services
@inject DashboardService DashboardService
@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="page-title">Tableau de bord</h1>
            <p class="page-subtitle">Surveillez et réservez vos salles en temps réel</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="spinner-container">
            <div class="spinner spinner-lg"></div>
            <span class="spinner-text">Chargement des données...</span>
        </div>
    }
    else
    {

    <!-- Filtres de recherche -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body py-3">
                    <div class="filter-grid">
                        <div class="filter-item">
                            <label class="filter-label">Voir les salles</label>
                            <select class="form-select" @bind="filtreType">
                                <option value="all">Toutes</option>
                                <option value="disponible">Disponibles</option>
                                <option value="reservee">Réservées</option>
                            </select>
                        </div>
                        <div class="filter-item">
                            <label class="filter-label">Recherche</label>
                            <input type="text" class="form-control" @bind="rechercheTexte" placeholder="Rechercher..." />
                        </div>
                        <div class="filter-item filter-item-small">
                            <label class="filter-label">Capacité min</label>
                            <input type="number" class="form-control" @bind="capaciteMin" placeholder="0" min="0" />
                        </div>
                        <div class="filter-item">
                            <label class="filter-label">Date</label>
                            <input type="date" class="form-control" @bind="dateFiltre" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Section Statistiques -->
    <div class="row mb-4">
        <div class="col-md-12 mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="font-semibold text-xl mb-0">Statistiques</h4>
                <div class="d-flex align-items-center gap-3">
                    <small class="text-muted">Dernière mise à jour: @derniereMiseAJour.ToString("HH:mm:ss")</small>
                    <button class="btn btn-sm btn-outline-primary @(isRefreshing ? "btn-loading" : "")" @onclick="RafraichirDonnees" disabled="@isRefreshing" aria-label="Rafraîchir les données" aria-busy="@isRefreshing">
                        <span class="oi oi-reload" aria-hidden="true"></span> Rafraîchir
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="stat-card primary">
                <div class="stat-icon primary">
                    <span class="oi oi-home" aria-hidden="true"></span>
                </div>
                <div class="stat-value primary">@nombreSallesActives</div>
                <div class="stat-label">Salles actives</div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="stat-card success">
                <div class="stat-icon success">
                    <span class="oi oi-calendar" aria-hidden="true"></span>
                </div>
                <div class="stat-value success">@nombreReservations</div>
                <div class="stat-label">Réservations en cours</div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="stat-card info">
                <div class="stat-icon info">
                    <span class="oi oi-check" aria-hidden="true"></span>
                </div>
                <div class="stat-value info">@nombreSallesDisponibles</div>
                <div class="stat-label">Disponibles maintenant</div>
            </div>
        </div>
    </div>

    <!-- Section Dernières activités -->
    <div class="row mb-4">
        <div class="col-md-12">
            <h4>Dernières activités</h4>
            <div class="card">
                <div class="card-body">
                    @if (dernieresActivites.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var activite in dernieresActivites)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>@activite.Type</strong> - Salle @activite.NomSalle
                                            <br />
                                            <small class="text-muted">@activite.DateHeure.ToString("dd/MM/yyyy HH:mm")</small>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">
                                            <span class="badge @GetBadgeClass(activite.Status)">@activite.Status</span>
                                            @if (activite.Status != "Terminée")
                                            {
                                                <a href="/reservation/modifier/@activite.IdReservation" class="btn btn-sm btn-outline-primary">
                                                    <span class="oi oi-pencil"></span> Modifier
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <span class="oi oi-inbox"></span>
                            </div>
                            <div class="empty-state-title">Aucune activité récente</div>
                            <p class="empty-state-text">Les réservations apparaîtront ici.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Section Grille de salles -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4>Toutes les salles</h4>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary @(vueGrille ? "active" : "")" @onclick="() => vueGrille = true">
                        <span class="oi oi-grid-three-up"></span> Grille
                    </button>
                    <button type="button" class="btn btn-outline-primary @(!vueGrille ? "active" : "")" @onclick="() => vueGrille = false">
                        <span class="oi oi-list"></span> Liste
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (vueGrille)
    {
        <div class="row g-4">
            @foreach (var salle in salles)
            {
                <div class="col-md-4">
                    <div class="card h-100 @(salle.EstDisponible ? "" : "border-warning")">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 text-white">Salle @salle.Numero</h5>
                            <span class="badge @(salle.EstDisponible ? "bg-success" : "bg-warning text-dark")">
                                @(salle.EstDisponible ? "Libre" : "Occupée")
                            </span>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <strong>Capacité maximale:</strong> @salle.CapaciteMaximale personnes<br />
                                <strong>Local:</strong> @salle.Numero
                            </p>
                            <div class="d-grid gap-2">
                                <a href="/salle/@salle.IdSallePk" class="btn btn-outline-primary btn-sm">Voir détails</a>
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            <small>Moniteur: @(salle.MoniteurActif ? "Actif" : "Inactif")</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Salle</th>
                                <th>Capacité</th>
                                <th>Status</th>
                                <th>Moniteur</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var salle in salles)
                            {
                                <tr>
                                    <td><strong>Salle @salle.Numero</strong></td>
                                    <td>@salle.CapaciteMaximale personnes</td>
                                    <td>
                                        <span class="badge @(salle.EstDisponible ? "bg-success" : "bg-warning text-dark")">
                                            @(salle.EstDisponible ? "Libre" : "Occupée")
                                        </span>
                                    </td>
                                    <td>@(salle.MoniteurActif ? "Actif" : "Inactif")</td>
                                    <td>
                                        <a href="/salle/@salle.IdSallePk" class="btn btn-sm btn-outline-primary">Détails</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    } @* End of else (isLoading) *@
</div>

@code {
    // Filtres (UI state)
    private string filtreType = "all";
    private string rechercheTexte = string.Empty;
    private int? capaciteMin = null;
    private DateTime? dateFiltre = null;
    private bool vueGrille = true;

    // Données du dashboard
    private int nombreSallesActives = 0;
    private int nombreReservations = 0;
    private int nombreSallesDisponibles = 0;
    private List<DashboardService.SalleViewModel> salles = new();
    private List<DashboardService.ActiviteViewModel> dernieresActivites = new();

    private DateTime derniereMiseAJour = DateTime.Now;
    private bool isRefreshing = false;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataFromDatabase();
        isLoading = false;
    }

    private async Task RafraichirDonnees()
    {
        isRefreshing = true;
        StateHasChanged();
        await LoadDataFromDatabase();
        isRefreshing = false;
    }

    private async Task LoadDataFromDatabase()
    {
        var data = await DashboardService.GetDashboardDataAsync();

        salles = data.Salles;
        nombreSallesActives = data.NombreSallesActives;
        nombreReservations = data.NombreReservations;
        nombreSallesDisponibles = data.NombreSallesDisponibles;
        dernieresActivites = data.DernieresActivites;
        derniereMiseAJour = data.DerniereMiseAJour;
    }

    private string GetBadgeClass(string status)
    {
        return status switch
        {
            "Terminée" => "bg-dark text-white",
            "En cours" => "bg-warning text-dark",
            "À venir" => "bg-info text-dark",
            "Confirmée" => "bg-success",
            "Annulée" => "bg-danger",
            _ => "bg-primary"
        };
    }
}
