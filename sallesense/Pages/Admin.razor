@page "/admin"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using SallseSense.Services
@inject AdminService AdminService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]

<h3>üîê Administration - Gestion des utilisateurs</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Erreur :</strong> @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Succ√®s :</strong> @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

@if (isLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Chargement...</span>
        </div>
        <p class="mt-2">Chargement des utilisateurs...</p>
    </div>
}
else if (!isAdmin)
{
    <div class="alert alert-danger">
        <h4>‚õî Acc√®s refus√©</h4>
        <p>Vous devez √™tre administrateur pour acc√©der √† cette page.</p>
        <button class="btn btn-primary" @onclick="RetourDashboard">
            Retour au Dashboard
        </button>
    </div>
}
else
{
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">üìã Liste des utilisateurs</h5>
        </div>
        <div class="card-body">
            @if (utilisateurs == null || !utilisateurs.Any())
            {
                <p class="text-muted">Aucun utilisateur trouv√©.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Pseudo</th>
                                <th>Email</th>
                                <th>R√¥le</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in utilisateurs)
                            {
                                var isBlacklisted = blacklistedUserIds.Contains(user.IdUtilisateurPk);
                                <tr class="@(isBlacklisted ? "table-danger" : "")">
                                    <td>@user.IdUtilisateurPk</td>
                                    <td>
                                        <strong>@user.Pseudo</strong>
                                        @if (user.IdUtilisateurPk == currentUserId)
                                        {
                                            <span class="badge bg-info ms-2">Vous</span>
                                        }
                                    </td>
                                    <td>@user.Courriel</td>
                                    <td>
                                        @if (user.Role == "Admin")
                                        {
                                            <span class="badge badge-admin">
                                                <span class="oi oi-star me-1"></span> Admin
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-user">
                                                <span class="oi oi-person me-1"></span> User
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (isBlacklisted)
                                        {
                                            <span class="badge badge-blacklisted">
                                                <span class="oi oi-ban me-1"></span> Blacklist√©
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-active">
                                                <span class="oi oi-check me-1"></span> Actif
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2 flex-wrap">
                                            @if (user.IdUtilisateurPk != currentUserId)
                                            {
                                                @* Bouton toggle Admin *@
                                                @if (!isBlacklisted)
                                                {
                                                    @if (user.Role == "Admin")
                                                    {
                                                        <button class="btn btn-sm btn-outline-warning" @onclick="() => ToggleAdminRole(user.IdUtilisateurPk)" title="Retirer les droits admin">
                                                            <span class="oi oi-arrow-circle-bottom"></span> R√©trograder
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-sm btn-outline-success" @onclick="() => ToggleAdminRole(user.IdUtilisateurPk)" title="Promouvoir administrateur">
                                                            <span class="oi oi-star"></span> Promouvoir
                                                        </button>
                                                    }
                                                }

                                                @* Bouton Blacklist *@
                                                @if (user.Role != "Admin")
                                                {
                                                    @if (isBlacklisted)
                                                    {
                                                        <button class="btn btn-sm btn-success" @onclick="() => RemoveFromBlacklist(user.IdUtilisateurPk)">
                                                            <span class="oi oi-check"></span> D√©bloquer
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-sm btn-danger" @onclick="() => AddToBlacklist(user.IdUtilisateurPk)">
                                                            <span class="oi oi-ban"></span> Blacklister
                                                        </button>
                                                    }
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted small">C'est vous</span>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <h5 class="mb-3 d-flex align-items-center gap-2">
            <span class="oi oi-graph text-primary"></span> Statistiques
        </h5>
        <div class="row g-3">
            <div class="col-md-3 col-sm-6">
                <div class="admin-stat-card primary">
                    <div class="admin-stat-icon primary">
                        <span class="oi oi-people"></span>
                    </div>
                    <div class="admin-stat-value">@utilisateurs.Count</div>
                    <div class="admin-stat-label">Utilisateurs total</div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="admin-stat-card success">
                    <div class="admin-stat-icon success">
                        <span class="oi oi-shield"></span>
                    </div>
                    <div class="admin-stat-value">@utilisateurs.Count(u => u.Role == "Admin")</div>
                    <div class="admin-stat-label">Administrateurs</div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="admin-stat-card info">
                    <div class="admin-stat-icon info">
                        <span class="oi oi-person"></span>
                    </div>
                    <div class="admin-stat-value">@utilisateurs.Count(u => u.Role == "User")</div>
                    <div class="admin-stat-label">Utilisateurs normaux</div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="admin-stat-card danger">
                    <div class="admin-stat-icon danger">
                        <span class="oi oi-ban"></span>
                    </div>
                    <div class="admin-stat-value">@blacklistedUserIds.Count</div>
                    <div class="admin-stat-label">Blacklist√©s</div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<AdminService.UtilisateurViewModel> utilisateurs = new();
    private List<int> blacklistedUserIds = new();
    private int currentUserId;

    private bool isLoading = true;
    private bool isAdmin = false;
    private string? errorMessage = null;
    private string? successMessage = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadCurrentUser();

        if (isAdmin)
        {
            await LoadDataAsync();
        }

        isLoading = false;
    }

    private async Task LoadCurrentUser()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var userIdClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
            if (userIdClaim != null && int.TryParse(userIdClaim.Value, out int userId))
            {
                currentUserId = userId;
                isAdmin = await AdminService.IsAdminAsync(userId);
            }
        }
    }

    private async Task LoadDataAsync()
    {
        try
        {
            var data = await AdminService.GetAdminDataAsync();
            utilisateurs = data.Utilisateurs;
            blacklistedUserIds = data.BlacklistedUserIds;
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors du chargement: {ex.Message}";
        }
    }

    private async Task AddToBlacklist(int userId)
    {
        errorMessage = null;
        successMessage = null;

        var result = await AdminService.AddToBlacklistAsync(userId, currentUserId);

        if (result.Success)
        {
            successMessage = result.Message;
            await LoadDataAsync();
        }
        else
        {
            errorMessage = result.Message;
        }
    }

    private async Task RemoveFromBlacklist(int userId)
    {
        errorMessage = null;
        successMessage = null;

        var result = await AdminService.RemoveFromBlacklistAsync(userId);

        if (result.Success)
        {
            successMessage = result.Message;
            await LoadDataAsync();
        }
        else
        {
            errorMessage = result.Message;
        }
    }

    private async Task ToggleAdminRole(int userId)
    {
        errorMessage = null;
        successMessage = null;

        var result = await AdminService.ToggleAdminRoleAsync(userId, currentUserId);

        if (result.Success)
        {
            successMessage = result.Message;
            await LoadDataAsync();
        }
        else
        {
            errorMessage = result.Message;
        }
    }

    private void RetourDashboard()
    {
        NavigationManager.NavigateTo("/dashboard");
    }
}
