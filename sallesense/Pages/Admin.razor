@page "/admin"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using SallseSense.Services
@inject AdminService AdminService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]

<h3>üîê Administration - Gestion des utilisateurs</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Erreur :</strong> @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Succ√®s :</strong> @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

@if (isLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Chargement...</span>
        </div>
        <p class="mt-2">Chargement des utilisateurs...</p>
    </div>
}
else if (!isAdmin)
{
    <div class="alert alert-danger">
        <h4>‚õî Acc√®s refus√©</h4>
        <p>Vous devez √™tre administrateur pour acc√©der √† cette page.</p>
        <button class="btn btn-primary" @onclick="RetourDashboard">
            Retour au Dashboard
        </button>
    </div>
}
else
{
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">üìã Liste des utilisateurs</h5>
        </div>
        <div class="card-body">
            @if (utilisateurs == null || !utilisateurs.Any())
            {
                <p class="text-muted">Aucun utilisateur trouv√©.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Pseudo</th>
                                <th>Email</th>
                                <th>R√¥le</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in utilisateurs)
                            {
                                var isBlacklisted = blacklistedUserIds.Contains(user.IdUtilisateurPk);
                                <tr class="@(isBlacklisted ? "table-danger" : "")">
                                    <td>@user.IdUtilisateurPk</td>
                                    <td>
                                        <strong>@user.Pseudo</strong>
                                        @if (user.IdUtilisateurPk == currentUserId)
                                        {
                                            <span class="badge bg-info ms-2">Vous</span>
                                        }
                                    </td>
                                    <td>@user.Courriel</td>
                                    <td>
                                        @if (user.Role == "Admin")
                                        {
                                            <span class="badge bg-primary">üëë Admin</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">üë§ User</span>
                                        }
                                    </td>
                                    <td>
                                        @if (isBlacklisted)
                                        {
                                            <span class="badge bg-danger">üö´ Blacklist√©</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">‚úì Actif</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.IdUtilisateurPk != currentUserId && user.Role != "Admin")
                                        {
                                            @if (isBlacklisted)
                                            {
                                                <button class="btn btn-sm btn-success" @onclick="() => RemoveFromBlacklist(user.IdUtilisateurPk)">
                                                    ‚úì D√©bloquer
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-danger" @onclick="() => AddToBlacklist(user.IdUtilisateurPk)">
                                                    üö´ Blacklister
                                                </button>
                                            }
                                        }
                                        else if (user.IdUtilisateurPk == currentUserId)
                                        {
                                            <span class="text-muted small">Impossible de se blacklister soi-m√™me</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Admin prot√©g√©</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <h5>üìä Statistiques</h5>
        <div class="row">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-primary">@utilisateurs.Count</h3>
                        <p class="mb-0">Utilisateurs total</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-success">@utilisateurs.Count(u => u.Role == "Admin")</h3>
                        <p class="mb-0">Administrateurs</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-info">@utilisateurs.Count(u => u.Role == "User")</h3>
                        <p class="mb-0">Utilisateurs normaux</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-danger">@blacklistedUserIds.Count</h3>
                        <p class="mb-0">Blacklist√©s</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<AdminService.UtilisateurViewModel> utilisateurs = new();
    private List<int> blacklistedUserIds = new();
    private int currentUserId;

    private bool isLoading = true;
    private bool isAdmin = false;
    private string? errorMessage = null;
    private string? successMessage = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadCurrentUser();

        if (isAdmin)
        {
            await LoadDataAsync();
        }

        isLoading = false;
    }

    private async Task LoadCurrentUser()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var userIdClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
            if (userIdClaim != null && int.TryParse(userIdClaim.Value, out int userId))
            {
                currentUserId = userId;
                isAdmin = await AdminService.IsAdminAsync(userId);
            }
        }
    }

    private async Task LoadDataAsync()
    {
        try
        {
            var data = await AdminService.GetAdminDataAsync();
            utilisateurs = data.Utilisateurs;
            blacklistedUserIds = data.BlacklistedUserIds;
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors du chargement: {ex.Message}";
        }
    }

    private async Task AddToBlacklist(int userId)
    {
        errorMessage = null;
        successMessage = null;

        var result = await AdminService.AddToBlacklistAsync(userId, currentUserId);

        if (result.Success)
        {
            successMessage = result.Message;
            await LoadDataAsync();
        }
        else
        {
            errorMessage = result.Message;
        }
    }

    private async Task RemoveFromBlacklist(int userId)
    {
        errorMessage = null;
        successMessage = null;

        var result = await AdminService.RemoveFromBlacklistAsync(userId);

        if (result.Success)
        {
            successMessage = result.Message;
            await LoadDataAsync();
        }
        else
        {
            errorMessage = result.Message;
        }
    }

    private void RetourDashboard()
    {
        NavigationManager.NavigateTo("/dashboard");
    }
}
