@page "/login"
@using SallseSense.Models
@using SallseSense.Services
@using SallseSense.Authentication
@using SallseSense.Data
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Microsoft.EntityFrameworkCore
@inject NavigationManager NavigationManager
@inject AuthService AuthService
@inject AuthenticationStateProvider AuthStateProvider
@inject ProtectedSessionStorage SessionStorage
@inject IDbContextFactory<Prog3A25BdSalleSenseContext> DbFactory

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Se connecter</h3>

                    <EditForm Model="@loginModel" OnValidSubmit="@HandleLoginAsync">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="courriel" class="form-label">Courriel</label>
                            <InputText id="courriel" type="email" class="form-control" @bind-Value="loginModel.Courriel" placeholder="Courriel" />
                            <ValidationMessage For="@(() => loginModel.Courriel)" />
                        </div>

                        <div class="mb-3">
                            <label for="motDePasse" class="form-label">Mot de passe</label>
                            <InputText id="motDePasse" type="password" class="form-control" @bind-Value="loginModel.MotDePasse" placeholder="Mot de passe" />
                            <ValidationMessage For="@(() => loginModel.MotDePasse)" />
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe" @bind="rememberMe" />
                            <label class="form-check-label" for="rememberMe">
                                Se souvenir de moi
                            </label>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @errorMessage
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Connexion</button>
                        </div>
                    </EditForm>

                    <div class="text-center mt-3">
                        <a href="#">Mot de passe oublié ?</a>
                    </div>

                    <hr class="my-4" />

                    <div class="text-center">
                        <p>Pas encore de compte ?</p>
                        <a href="/register" class="btn btn-outline-secondary">Créer un compte</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new LoginModel();
    private bool rememberMe = false;
    private string errorMessage = string.Empty;

    private async Task HandleLoginAsync()
    {
        errorMessage = string.Empty;
        if(string.IsNullOrWhiteSpace(loginModel.Courriel) || string.IsNullOrWhiteSpace(loginModel.MotDePasse))
        {
            errorMessage = "Veuillez remplir tous les champs.";
            return;
        }

        var (success, userId, message) = await AuthService.LoginAsync(loginModel.Courriel, loginModel.MotDePasse);

        if (!success)
        {
            errorMessage = message;
            return;
        }

        // Récupérer uniquement le pseudo et le rôle (sans charger mdp_salt/mdp_hash)
        await using var db = await DbFactory.CreateDbContextAsync();
        var userInfo = await db.Utilisateurs
            .Where(u => u.IdUtilisateurPk == userId)
            .Select(u => new { u.Pseudo, u.Role })
            .FirstOrDefaultAsync();

        if (userInfo == null)
        {
            errorMessage = "Erreur lors de la récupération des informations utilisateur.";
            return;
        }

        // Stocker l'ID utilisateur dans la session (pour NavMenu et autres pages)
        await SessionStorage.SetAsync("userId", userId);

        // Connexion réussie - créer la session utilisateur avec le vrai rôle
        var customAuthStateProvider = (CustomAuthenticationStateProvider)AuthStateProvider;
        await customAuthStateProvider.UpdateAuthenticationState(new UserSession
        {
            UserName = userInfo.Pseudo,
            UserId = userId,
            Role = userInfo.Role ?? "User" // Utiliser le rôle de la BD ou "User" par défaut
        });

        // Rediriger vers le dashboard (sans forceLoad pour conserver l'état d'authentification)
        NavigationManager.NavigateTo("/dashboard", false);
    }

    // Model pour le login
    public class LoginModel
    {
        public string Courriel { get; set; } = string.Empty;
        public string MotDePasse { get; set; } = string.Empty;
    }
}
